{
  "paths": {
    "/groups/": {
      "get": {
        "tags": ["groups"],
        "description": "Get all groups",
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer"
            },
            "description": "Number of documents to return."
          },
          {
            "in": "query",
            "name": "offset",
            "schema": {
              "type": "integer"
            },
            "description": "Number of documents to skip."
          },
          {
            "in": "query",
            "name": "orderBy",
            "schema": {
              "type": "string"
            },
            "description": "Field to order by."
          },
          {
            "in": "query",
            "name": "direction",
            "schema": {
              "type": "string"
            },
            "description": "Sort order (asc/desc)."
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Group"
                      }
                    },
                    "meta": {
                      "type": "object",
                      "$ref": "#/components/schemas/Meta"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["groups"],
        "description": "Create a group",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GroupCreate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/Group"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          }
        }
      }
    },
    "/groups/{groupId}": {
      "get": {
        "tags": ["groups"],
        "description": "Get one group by Id",
        "parameters": [
          {
            "name": "groupId",
            "in": "path",
            "description": "Id of the Group",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Group"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["groups"],
        "description": "Update a group",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GroupCreate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/Group"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["groups"],
        "description": "Delete a group",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": ""
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "apiKey",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "name": "Authorization",
        "in": "header"
      }
    },
    "schemas": {
      "UnauthorizedError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "unauthorized"
              },
              "status": {
                "type": "integer",
                "example": "401"
              }
            }
          }
        }
      },
      "Group": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "573111cf-a454-484a-8905-9e494b4a85f9"
          },
          "title": {
            "type": "string",
            "example": "My group X"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-08-11T03:30:46.150Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-08-11T03:30:46.150Z"
          },
          "userId": {
            "type": "string",
            "example": "42fd00a4-9836-4e0d-99e3-308c4231663c"
          }
        }
      },
      "GroupCreate": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Group X"
          }
        }
      },
      "Meta": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "example": 10
          },
          "offset": {
            "type": "integer",
            "example": 0
          },
          "total": {
            "type": "integer",
            "example": 34
          },
          "orderBy": {
            "type": "string",
            "example": "createdAt"
          },
          "direction": {
            "type": "string",
            "example": "desc"
          }
        }
      }
    }
  }
}